<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/police_blue</item>
        <item name="android:textColor">@color/police_gold</item>
        <item name="android:actionMenuTextColor">@color/police_gold</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>


    </style>
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:subtitleTextColor">@color/police_gold</item>
        <item name="android:titleTextStyle">@style/CustomTextColor</item>
    </style>
    <style name="CustomTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/police_gold</item>
    </style>

    

</resources>
