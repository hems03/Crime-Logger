<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:id="@+id/list_item_crime"
                android:layout_height="wrap_content"
                android:elevation="1dp"
    android:clipToPadding="false"
    android:outlineProvider="bounds"
    >
    <CheckBox
        android:id="@+id/crime_solved_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_crime_title_textview"
        android:layout_toLeftOf="@id/crime_solved_checkbox"
        android:padding="4dp"
        android:textStyle="bold"

        android:transitionName="@string/transition_crime_title"
        tools:text="Crime Title"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_crime_date_textview"
        android:layout_toLeftOf="@id/crime_solved_checkbox"
        android:layout_below="@id/list_item_crime_title_textview"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Crime Date"

        />


</RelativeLayout>